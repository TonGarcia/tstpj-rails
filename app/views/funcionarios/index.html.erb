<p id="notice"><%= notice %></p>

<h1>Funcionarios</h1>

<table>
  <thead>
    <tr>
      <th>Nome completo</th>
      <th>Endereco</th>
      <th>Especialidade</th>
      <th>Data admissao</th>
      <th>Data dispensa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= funcionario.nome_completo %></td>
        <td><%= funcionario.endereco %></td>
        <td><%= funcionario.especialidade_id %></td>
        <td><%= funcionario.data_admissao %></td>
        <td><%= funcionario.data_dispensa %></td>
        <td><%= link_to 'Show', funcionario %></td>
        <td><%= link_to 'Edit', edit_funcionario_path(funcionario) %></td>
        <td><%= link_to 'Destroy', funcionario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

