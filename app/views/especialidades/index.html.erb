<p id="notice"><%= notice %></p>

<h1>Especialidades</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th>Ativo</th>
      <th>Localidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @especialidades.each do |especialidade| %>
      <tr>
        <td><%= especialidade.descricao %></td>
        <td><%= especialidade.ativo %></td>
        <td><%= especialidade.localidade %></td>
        <td><%= link_to 'Show', especialidade %></td>
        <td><%= link_to 'Edit', edit_especialidade_path(especialidade) %></td>
        <td><%= link_to 'Destroy', especialidade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

